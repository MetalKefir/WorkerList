<Window x:Class="WorkerList.ChangeEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerList"
        mc:Ignorable="d"
        Title="ChangeEmployee" Height="300" Width="300">
    <Grid>
        <StackPanel  DataContext="{Binding Employee}">
            <TextBlock Text="Фамилия" />
            <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Должность" />
            <TextBox Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Департамент" />
            <TextBox Text="{Binding DepartNumber, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
